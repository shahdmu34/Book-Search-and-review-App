<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.project4_cis436.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/bookSearchFragment"
        android:name="com.example.project4_cis436.BookSearchFragment"
        android:label="fragment_book_search"
        tools:layout="@layout/fragment_book_search" >
        <action
            android:id="@+id/action_bookSearchFragment_to_bookDescriptionFragment"
            app:destination="@id/bookDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookDescriptionFragment"
        android:name="com.example.project4_cis436.bookDescriptionFragment"
        android:label="fragment_book_description"
        tools:layout="@layout/fragment_book_description" >
        <action
            android:id="@+id/action_bookDescriptionFragment_to_reviewFragment"
            app:destination="@id/reviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.example.project4_cis436.ReviewFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" >
        <action
            android:id="@+id/action_reviewFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.project4_cis436.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
</navigation>